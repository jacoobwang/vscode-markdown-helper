{
    "name": "markdown-helper",
    "displayName": "markdown-helper",
    "description": "markdow helper functions like add text color, add h1 h2 h3, add img & snippet ..",
    "version": "1.0.0",
    "publisher": "jacoob",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.textFunctions"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.textFunctions",
                "title": "MdText",
                "description": "Text functions on selections"
            },
            {
                "command": "extension.colorFunctions",
                "title": "MdColor",
                "description": "Color functions on selections"
            },
            {
                "command": "extension.tableFunctions",
                "title": "MdTable",
                "description": "Table Snippet"
            }
        ],
        "keybindings": [
            {
                "command": "extension.tableFunctions",
                "key": "ctrl+shift+t", 
                "mac": "cmd+shift+t"
            },
            {
                "command": "extension.colorFunctions",
                "key": "ctrl+shift+c", 
                "mac": "cmd+shift+c"
            },
            {
                "command": "extension.textFunctions",
                "key": "ctrl+shift+w",
                "mac": "cmd+shift+w"
            }
        ],
        "markdown.markdownItPlugins": true
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "js-beautify": "^1.7.5",
        "markdown-it-emoji": "^1.4.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jacoobwang/vscode-markdown-helper.git"
    },
    "keywords": [
        "vscode",
        "markdown",
        "color"
    ],
    "author": "jacoobwang",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jacoobwang/vscode-markdown-helper.git"
    }
}
